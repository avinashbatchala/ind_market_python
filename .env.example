APP_ENV=dev
LOG_LEVEL=INFO

DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/groww_scanner
REDIS_URL=redis://redis:6379/0

# Groww credentials: provide either GROWW_ACCESS_TOKEN or API key/secret/TOTP flow.
# If your setup uses API key + TOTP (like your working app), set GROWW_API_KEY and GROWW_TOTP_SECRET.
GROWW_ACCESS_TOKEN=
GROWW_API_KEY=
GROWW_API_SECRET=
GROWW_TOTP_SECRET=
GROWW_TOTP_TOKEN=

GROWW_EXCHANGE=NSE
GROWW_SEGMENT=CASH

INGEST_BARS=220
COMPUTE_BARS=200
SCHEDULER_INGEST_INTERVAL_SEC=45
SCHEDULER_COMPUTE_INTERVAL_SEC=60
SCHEDULER_TIMEFRAMES=5m,15m,1h,1d

MARKET_TZ=Asia/Kolkata
MARKET_OPEN_TIME=09:15
MARKET_CLOSE_TIME=15:30
MARKET_DAYS=MON,TUE,WED,THU,FRI
MARKET_ALLOW_AFTER_HOURS=false

NIFTY_SYMBOL=NIFTY
BANKNIFTY_SYMBOL=BANKNIFTY

RATE_LIMIT_PER_SEC=10
RATE_LIMIT_PER_MIN=300
